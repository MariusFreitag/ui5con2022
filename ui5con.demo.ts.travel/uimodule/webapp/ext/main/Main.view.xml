<mvc:View xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:macros="sap.fe.macros"
    xmlns:html="http://www.w3.org/1999/xhtml" controllerName="ui5con.demo.ts.travel.ext.main.Main">
    <Page title="Main">
        <content>
            <VBox fitContainer="true" alignItems="Stretch" alignContent="Stretch" justifyContent="Start">
                <macros:FilterBar id="FilterBar" metaPath="@com.sap.vocabularies.UI.v1.SelectionFields"/>
                <macros:Chart id="Chart" metaPath="@com.sap.vocabularies.UI.v1.Chart#Airline" filterBar="FilterBar" selectionMode="Single" selectionChange=".onChartSelectionChanged"/>
            </VBox>
        </content>
    </Page>
</mvc:View>